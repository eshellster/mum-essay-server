extends ../../head_standard_mata.pug
block properties 
        // Site Properties
        title mu:m essay colletion
        script(src="/semantic/out/components/form.js")
        script(src="/semantic/out/components/transition.js")
        style(type="text/css").
            body {
            background-color: #FFCA05;
            }
            body > .grid {
            height: 100%;
            }
            .column {
            max-width: 450px;
            margin: 30px;
            }
            .header {
              display: inline;
            }
        script.
            $(document)
            .ready(function() {
            $('.ui.form')
            .form({
            fields: {
            name: {
            identifier  : 'username',
            rules: [
            {
            type   : 'empty',
            prompt : '등록하신 본인의 성함을 입력해주세요'
            }
            ]
            },
            password: {
            identifier  : 'password',
            rules: [
            {
            type   : 'empty',
            prompt : '비밀번호를 입력하세요'
            },
            {
            type   : 'length[4]',
            prompt : '비밀번호 자리수는 4개 이상 입력되어야 합니다.'
            }
            ]
            }
            }
            })
            ;
            })
            ;
block content
        //body
        .ui.middle.aligned.center.aligned.grid
            .column
                h1.ui.teal.image.header
                    svg.image(viewbox='0 0 44 41', width='20')
                      use(xlink:href='/public/svg/black.svg#Page-1')
                    .content
                          | My First Essay Collection
                
                form(action='/auth/login', method='post').ui.large.form
                    .ui.stacked.segment
                        .field
                            .ui.left.icon.input
                                i.user.icon
                                input(type='text', name='username', placeholder='성함')
                        .field
                            .ui.left.icon.input
                                i.lock.icon
                                input(type='password', name='password', placeholder='비밀번호')
                        .ui.fluid.large.teal.submit.button Log in
                    .ui.error.message
                .ui.message
                    | 계정이 없으신가요?  
                    a(href='/auth/register') 가입하기
                footer.footer
                  .ui.horizontal.divider
                    | 등록시스템 관련 문의
                  |  뮤엠 이천신하센터 010-3712-0288, 031-632-0907 
              
